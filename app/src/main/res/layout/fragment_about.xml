<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:gravity="center_horizontal">

        <!-- App Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:src="@drawable/ic_notif"
                android:contentDescription="Extension Box icon" />
        </com.google.android.material.card.MaterialCardView>

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extension Box"
            android:textSize="30sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorOnSurface" />

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="v1.0 Sprint 4"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="An open-source, modular system monitoring app for Android. Track battery health, network speed, data usage, screen time, step count, and more â€” all from a single persistent notification.\n\nEach extension can be independently enabled/disabled with its own settings. Zero resource usage for disabled modules."
            android:textSize="15sp"
            android:lineSpacingExtra="6dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textAlignment="viewStart" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorOutline"
            android:alpha="0.4" />

        <!-- Developers Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developers"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp" />

        <!-- Dev 1 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/devCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ¤–"
                    android:textSize="28sp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gemini (AI)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Development"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Dev 2 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/devCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ‘¤"
                    android:textSize="28sp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ã–mer SÃœSÄ°N"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creator â€¢ @omersusin"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†’"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorOutline"
            android:alpha="0.4" />

        <!-- Source Code -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSourceCode"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="View Source Code on GitHub"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_marginBottom="16dp" />

        <!-- License -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Licensed under GPL-3.0"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textAlignment="center" />

    </LinearLayout>
</ScrollView>
